  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "@types/pg": "^8.11.11",
    "dotenv-cli": "^7.2.1",
    "drizzle-kit": "^0.30.4",
    "drizzle-prisma-generator": "^0.1.7",
    "pg": "^8.13.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  }
